[color]
        ui = true
[alias]
        st = status
        gr = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
        cm = commit
        stt = status -uno
        difff = diff --word-diff
        today = log --oneline --since='12 hour ago'
        cancel = reset --soft HEAD^
        lrm = checkout .
        rf = reflog
